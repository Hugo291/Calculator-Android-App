            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/text_dark_blue"
                app:cardCornerRadius="@dimen/card_corner_radius" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_valid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/game_button_shadow_offset"
                android:layout_marginBottom="@dimen/game_button_shadow_offset"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/button_green_mint"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:strokeColor="@color/text_dark_blue"
                app:strokeWidth="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/fredoka_semibold"
                    android:text="@string/valid"
                    android:textColor="@color/game_button_text_color"
                    android:textSize="@dimen/game_button_text_size" />
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>

    </GridLayout>

</LinearLayout>