<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/dialog_background">


    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bebas_neue"
        android:text="VICTOIRE"
        android:textColor="@color/dialog_dark_text"
        android:textSize="68sp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/dialog_dark_text"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:minWidth="220dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/fredoka_semibold"
                    android:text="38"
                    android:textColor="@color/white"
                    android:textSize="80sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/fredoka_semibold"
                    android:text="00:30"
                    android:textColor="@color/white"
                    android:textSize="30sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/game_button_shadow_offset"
            android:layout_marginBottom="@dimen/game_button_shadow_offset"
            android:minWidth="220dp"
            app:cardBackgroundColor="@color/dialog_green"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/victory_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/fredoka_semibold"
                    android:text="38"
                    android:textColor="@color/white"
                    android:textSize="80sp" />


                <TextView
                    android:id="@+id/victory_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/fredoka_semibold"
                    android:text="00:30"
                    android:textColor="@color/white"
                    android:textSize="30sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>


    <FrameLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/dialog_dark_text"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="0dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/game_button_shadow_offset"
            android:layout_marginBottom="@dimen/game_button_shadow_offset"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/dialog_green"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/fredoka_semibold"
                android:text="SUIVANT"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

    <FrameLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/dialog_dark_text"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="0dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/game_button_shadow_offset"
            android:layout_marginBottom="@dimen/game_button_shadow_offset"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/dialog_dark_gray_button"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/fredoka_semibold"
                android:text="ACCUEIL"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

</LinearLayout>

</LinearLayout>
