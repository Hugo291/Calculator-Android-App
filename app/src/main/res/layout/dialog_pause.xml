<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/game_button_shadow_offset">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/text_dark_blue"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="0dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/game_button_shadow_offset"
            android:layout_marginBottom="@dimen/game_button_shadow_offset"
            app:cardBackgroundColor="@color/button_blue_light"
            app:cardCornerRadius="@dimen/card_corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/fredoka_semibold"
                    android:text="PAUSED"
                    android:textColor="@color/white"
                    android:textSize="32sp" />

                <FrameLayout
                    android:id="@+id/btn_resume"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@color/button_green_mint_dark"
                        app:cardCornerRadius="@dimen/card_corner_radius" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/game_button_shadow_offset"
                        android:layout_marginBottom="@dimen/game_button_shadow_offset"
                        app:cardBackgroundColor="@color/button_green_mint"
                        app:cardCornerRadius="@dimen/card_corner_radius">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/fredoka_semibold"
                            android:text="RESUME"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                    </com.google.android.material.card.MaterialCardView>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/btn_quit"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@color/button_red_coral_dark"
                        app:cardCornerRadius="@dimen/card_corner_radius" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/game_button_shadow_offset"
                        android:layout_marginBottom="@dimen/game_button_shadow_offset"
                        app:cardBackgroundColor="@color/button_red_coral"
                        app:cardCornerRadius="@dimen/card_corner_radius">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/fredoka_semibold"
                            android:text="QUIT"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                    </com.google.android.material.card.MaterialCardView>
                </FrameLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</LinearLayout>