<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/game_button_shadow_offset">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/text_dark_blue"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="0dp"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/game_end_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/game_button_shadow_offset"
            android:layout_marginBottom="@dimen/game_button_shadow_offset"
            app:cardBackgroundColor="@color/button_green_mint"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:strokeColor="@color/text_dark_blue"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/game_end_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/fredoka_semibold"
                    android:text="VICTORY"
                    android:textColor="@color/white"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/game_end_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/fredoka_semibold"
                    android:text="38"
                    android:textColor="@color/white"
                    android:textSize="80sp" />

                <TextView
                    android:id="@+id/game_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/fredoka_semibold"
                    android:text="00:00:00"
                    android:textColor="@color/white"
                    android:textSize="32sp" />

                <FrameLayout
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@color/text_dark_blue"
                        app:cardCornerRadius="@dimen/card_corner_radius" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/game_button_shadow_offset"
                        android:layout_marginBottom="@dimen/game_button_shadow_offset"
                        app:cardBackgroundColor="@color/button_yellow_strong"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:strokeColor="@color/text_dark_blue"
                        app:strokeWidth="2dp">

                        <TextView
                            android:id="@+id/btn_next_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/fredoka_semibold"
                            android:text="NEXT"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                    </com.google.android.material.card.MaterialCardView>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/btn_home"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@color/text_dark_blue"
                        app:cardCornerRadius="@dimen/card_corner_radius" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/game_button_shadow_offset"
                        android:layout_marginBottom="@dimen/game_button_shadow_offset"
                        app:cardBackgroundColor="@color/button_blue_light"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:strokeColor="@color/text_dark_blue"
                        app:strokeWidth="2dp">

                        <TextView
                            android:id="@+id/btn_home_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/fredoka_semibold"
                            android:text="HOME"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                    </com.google.android.material.card.MaterialCardView>
                </FrameLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</LinearLayout>